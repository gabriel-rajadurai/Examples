<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.test.changemaker_test.IntroActivity"
    android:background="@color/mdtp_white">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:weightSum="3.5"
        android:background="@mipmap/intro_bottom_gradient">

        <TextView
            android:layout_marginLeft="2dp"
            android:id="@+id/prev_screen"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Previous"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/introscreen_dotIndicator"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/next_screen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:clickable="true"
            android:weightSum="0.8"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginRight="2dp">

            <TextView
                android:id="@+id/bt_nxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:background="@drawable/md_transparent"
                android:text="Next"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                />

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="5dp"
                android:layout_height="12dp"
                android:layout_weight="0.2"
                android:src="@mipmap/arrow"
                />

        </LinearLayout>


    </LinearLayout>



</FrameLayout>
